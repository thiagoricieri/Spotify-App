<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center">

    <TextView android:text="Spotify Streamer Media Player" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Title"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:theme="@style/AppTheme" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/songImage"
        android:layout_toRightOf="@+id/seekBar"
        android:layout_alignLeft="@+id/Title"
        android:layout_above="@+id/songName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/artistName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pauseButton"
        android:background="@android:drawable/ic_media_pause"
        android:layout_alignTop="@+id/previosButton"
        android:layout_toRightOf="@+id/previosButton"
        android:layout_toEndOf="@+id/previosButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/playButton"
        android:background="@android:drawable/ic_media_play"
        android:layout_alignTop="@+id/pauseButton"
        android:layout_toRightOf="@+id/seekText"
        android:layout_toEndOf="@+id/seekText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextButton"
        android:background="@android:drawable/ic_media_next"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/playButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/songName"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekText"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previosButton"
        android:background="@android:drawable/ic_media_previous"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artistName"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_below="@+id/Title"
        android:layout_alignLeft="@+id/Title"
        android:layout_alignStart="@+id/Title"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:minHeight="@dimen/abc_text_size_medium_material"
        android:minWidth="@dimen/abc_text_size_medium_material"
        android:layout_alignRight="@+id/Title"
        android:layout_alignEnd="@+id/Title" />


</RelativeLayout><!-- From: file:/home/amr/StudioProjects/Spotify-App/app/src/main/res/layout/fragment_media_player.xml -->